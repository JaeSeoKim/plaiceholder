{
  "private": true,
  "name": "root",
  "scripts": {
    "check": "pnpm check --parallel --stream --workspace-concurrency=0",
    "commit": "git-cz",
    "lint": "pnpm check && pnpm lint:pkg",
    "lint:pkg": "syncpack list-mismatches",
    "postinstall": "[[ \"$CI\" != 'true' ]] && pnpx husky install || echo 'Skipping husky install'",
    "pre-commit": "pnpx lint-staged --config .config/lint-staged.config.mjs",
    "preinstall": "npx only-allow pnpm",
    "prepare": "pnpm build --filter ./packages --stream --workspace-concurrency=0"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.1",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "sharp": "0.30.6",
    "syncpack": "5.8.15",
    "typescript": "4.7.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "pnpm": "^6.32.19"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "syncpack": {
    "peer": false,
    "sortFirst": [
      "private",
      "name",
      "version",
      "description",
      "author",
      "license",
      "repository",
      "bugs",
      "homepage",
      "keywords",
      "source",
      "main",
      "module",
      "exports",
      "typings",
      "typesVersions",
      "files",
      "scripts",
      "browserslist",
      "peerDependencies",
      "dependencies",
      "devDependencies"
    ]
  }
}
