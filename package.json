{
  "private": true,
  "name": "root",
  "scripts": {
    "build": "pnpm build --filter ./packages --stream --workspace-concurrency=0",
    "commit": "pnpx git-cz",
    "format:packages": "pnpx syncpack format --config .config/.syncpackrc",
    "format:prettier": "pnpx prettier --ignore-unknown --no-error-on-unmatched-pattern --write",
    "lint": "pnpx run-s lint:*",
    "lint:packages": "pnpx syncpack list-mismatches --config .config/.syncpackrc",
    "lint:prettier": "pnpx prettier --check .",
    "lint:ts": "pnpm lint:ts --parallel --stream --workspace-concurrency=0",
    "postinstall": "[[ \"$CI\" -ne \"1\" ]] && [[ \"CI\" != 'true' ]] && pnpx husky install || echo 'Skipping postinstall'",
    "pre-commit": "pnpx lint-staged --config .config/lint-staged.config.mjs",
    "preinstall": "npx only-allow pnpm",
    "prepare": "[[ \"$CI\" -ne \"1\" ]] && [[ \"CI\" != 'true' ]] && pnpm build || echo 'Skipping prepare'"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "sharp": "0.30.6",
    "syncpack": "8.0.0",
    "typescript": "4.7.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "pnpm": "^6.32.19"
  }
}
